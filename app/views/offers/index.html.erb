<% if user_signed_in? %>
  <table>
    <thead>
      <tr>
        <th><%=t ".name" %></th>
        <th><%=t ".description" %></th>
        <th><%=t ".created_at" %></th>
        <th><%=t ".quantity" %></th>
        <th><%=t ".cost" %></th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @offers.each do |offer| %>
        <tr>
          <td><%= link_to offer.name, offer_path(offer) %></td>
          <td><%= offer.description %></td>
          <td><%= offer.created_at %></td>
          <td><%= offer.quantity %></td>
          <td><%= offer.cost %></td>
          <% if offer.active == true %>
            <td><%= link_to(fa_icon("check-circle 2x"), offer_path(offer)) %></td>
          <% else %>
            <td><%= link_to(fa_icon("times-circle 2x"), offer_path(offer)) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('button.new'), new_offer_path, class: 'button success small' %>

<% else %>

  <table>
    <thead>
      <tr>
        <th><%=t ".name" %></th>
        <th><%=t ".description" %></th>
        <th><%=t ".quantity" %></th>
        <th><%=t ".cost" %></th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @active_offers.each do |offer| %>
        <tr>
          <td><%= offer.name %></td>
          <td><%= offer.description %></td>
          <td><%= offer.quantity %></td>
          <td><%= offer.cost %></td>
          <td><%= link_to t('button.show'), offer, class: 'button tiny' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>