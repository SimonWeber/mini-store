<% if user_signed_in? %>
  <table>
    <thead>
      <tr>
        <th><%=t ".name" %></th>
        <th><%=t ".description" %></th>
        <th><%=t ".created_at" %></th>
        <th><%=t ".quantity" %></th>
        <th><%=t ".cost" %></th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @offers.each do |offer| %>
        <tr>
          <td><%= offer.name %></td>
          <td><%= offer.description %></td>
          <td><%= offer.created_at %></td>
          <td><%= offer.quantity %></td>
          <td><%= offer.cost %></td>
          <% if offer.active == true %>
            <td><i class="fa fa-check-circle fa-2x"></i></td>
          <% else %>
            <td><i class="fa fa-times-circle fa-2x"></i></td>
          <% end %>
          <td><%= link_to t('button.show'), offer, class: 'button tiny' %></td>
          <td><%= link_to t('button.edit'), edit_offer_path(offer), class: 'button tiny' %></td>
          <td><%= link_to t('button.destroy'), offer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button alert tiny' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('button.new'), new_offer_path, class: 'button success small' %>

<% else %>

  <table>
    <thead>
      <tr>
        <th><%=t ".name" %></th>
        <th><%=t ".description" %></th>
        <th><%=t ".quantity" %></th>
        <th><%=t ".cost" %></th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @active_offers.each do |offer| %>
        <tr>
          <td><%= offer.name %></td>
          <td><%= offer.description %></td>
          <td><%= offer.quantity %></td>
          <td><%= offer.cost %></td>
          <td><%= link_to t('button.show'), offer, class: 'button tiny' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>