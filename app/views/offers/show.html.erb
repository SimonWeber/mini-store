
<p>
  <strong><%=t ".name" %>:</strong>
  <%= @offer.name %>
</p>

<p>
  <strong><%=t ".description" %>:</strong>
  <%= @offer.description %>
</p>

<% if user_signed_in? %>
<p>
  <strong><%=t ".created_at" %>:</strong>
  <%= @offer.created_at %>
</p>
<% end %>

<p>
  <strong><%=t ".quantity" %>:</strong>
  <%= @offer.quantity %>
</p>

<p>
  <strong><%=t ".cost" %>:</strong>
  <%= @offer.cost %>
</p>

<% if user_signed_in? %>
  <p>
    <strong><%=t ".active" %>:</strong>
    <%= @offer.active %>
  </p>

  <%= link_to t('button.edit'), edit_offer_path(@offer), class: 'button small right' %>
<% end %>

<%= link_to t('button.back'), offers_path, class: 'button small' %>
