<%= form_for(@offer) do |f| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= @offer.errors.count %> Fehler beim Erstellen eines Angebots aufgetreten</h2>

      <ul>
      <% @offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t ".name" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t ".description" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label t ".created_at" %><br>
    <%= f.datetime_select :created_at %>
  </div>
  <div class="field">
    <%= f.label t ".quantity" %><br>
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label t ".cost" %><br>
    <%= f.text_field :cost %>
  </div>
  <div class="field">
    <%= f.label t ".active" %><br>
    <%= f.check_box :active %>
  </div>
  <div class="actions">
    <%= f.submit 'Aktualisieren', class: 'button small success right' %>
  </div>
<% end %>
