<% if user_signed_in? %>
  <div class="large-12 columns">
    <div class="bottom-space">
      <%= link_to(fa_icon("plus-square 2x"), new_order_path) %>
    </div>
  </div>
  <table>
    <thead>
      <tr>
        <th><%= sortable "received_at", (t ".received_at") %></th>
        <th><%= sortable "quantity", (t ".quantity") %></th>
        <th><%= sortable "name", (t "offer") %></th>
        <th><%= sortable "lastname", (t ".name") %></th>
        <th><%= sortable "comment", (t ".comment") %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.received_at, order_path(order) %></td>
          <td><%= order.quantity %></td>
          <td><%= order.offer.name if order.offer.present? %></td>
          <td>
            <% if order.firstname.present? %>
              <%= order.firstname %>
            <% end %>
            <b><%= order.lastname %></b>
          </td>
          <td><%= order.comment %></td>
          <% if order.finished == true %>
            <td><%= link_to(fa_icon("thumbs-up 2x"), order_path(order)) %></td>
          <% else %>
            <td><%= link_to(fa_icon("spinner spin 2x"), order_path(order)) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
